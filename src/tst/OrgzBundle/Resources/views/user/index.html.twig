{% extends 'OrgzBundle::base.html.twig' %}
{% block menu %}
    <div class="row">
        <ul class="nav nav-pills">
            <li role="presentation" class=""><a href="{{ path('organization_index') }}">Главная</a></li>
            <li role="presentation" class="active"><a href="{{ path('user_index') }}">Пользователи</a></li>
        </ul>
    </div>
{% endblock %}
{% block body %}
    <h1>Список пользователей</h1>
    <div class="row top-buffer">
        <div class="span3 text-right">
            <a href="{{ path('user_new') }}" class="btn btn-large btn-black btn-primary">Добавить пользователя</a>
        </div>
    </div>
<div class="row top-buffer">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Фамилия</th>
                <th>Имя</th>
                <th>Отчество</th>
                <th>Дата рождения</th>
                <th>ИНН</th>
                <th>СНИЛС</th>
                <th>Организация</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td><a href="{{ path('user_show', { 'id': user.id }) }}">{{ user.secondname }}</a></td>
                <td>{{ user.firstname }}</td>
                <td>{{ user.patronymic }}</td>
                <td>{% if user.datebirth %}{{ user.datebirth|date('Y-m-d') }}{% endif %}</td>
                <td>{{ user.inn }}</td>
                <td>{{ user.snils }}</td>
                <td>{{ user.organization }}</td>
                <td class="text-right">
                    <a class="btn btn-info" href="{{ path('user_show', { 'id': user.id }) }}"><span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span></a>
                    <a class="btn btn-inverse" href="{{ path('user_edit', { 'id': user.id }) }}"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
