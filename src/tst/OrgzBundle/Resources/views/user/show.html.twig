{% extends 'OrgzBundle::base.html.twig' %}
{% block menu %}
    <div class="row">
        <ul class="nav nav-pills">
            <li role="presentation" class=""><a href="{{ path('organization_index') }}">Главная</a></li>
            <li role="presentation"><a href="{{ path('user_index') }}">Пользователи</a></li>
        </ul>
    </div>
{% endblock %}

{% block body %}
    <h1>Пользователь {{ user.secondname }} {{ user.firstname }} {{ user.patronymic }}</h1>

    <div class="row top-buffer">
        <div class="span3 text-right">
            <a href="{{ path('user_new') }}" class="btn btn-large btn-black btn-primary">Добавить пользователя</a>
        </div>
    </div>

    <div class="row top-buffer">
        <table class="table table-striped">
            <tbody>
            <tr>
                <th>id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Фамилия</th>
                <td>{{ user.secondname }}</td>
            </tr>
            <tr>
                <th>Имя</th>
                <td>{{ user.firstname }}</td>
            </tr>
            <tr>
                <th>Отчество</th>
                <td>{{ user.patronymic }}</td>
            </tr>
            <tr>
                <th>Дата рождения</th>
                <td>{% if user.datebirth %}{{ user.datebirth|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>ИНН</th>
                <td>{{ user.inn }}</td>
            </tr>
            <tr>
                <th>СНИЛС</th>
                <td>{{ user.snils }}</td>
            </tr>
            </tbody>
        </table>
    </div>

    <ul class="list-unstyled  row">
        <li class="col-xs-3">
            <a href="{{ path('user_index') }}" class="btn btn-lg  btn-primary ">К списку пользователей</a>
        </li>
        <li class="col-xs-3">
            <a href="{{ path('organization_show', { 'id': user.organization.id }) }}" class="btn btn-lg  btn-primary ">Просмотр организации</a>
        </li>
        <li class="col-xs-3">
            <a href="{{ path('user_edit', { 'id': user.id }) }}" class="btn btn-lg  btn-info ">Редактировать</a>
        </li>



        <li class="col-xs-3">
            {{ form_start(delete_form) }}
            <input type="submit" class="btn btn-lg btn-black btn-inverse" value="Удалить">
            {{ form_end(delete_form) }}
        </li>
    </ul>

{% endblock %}

